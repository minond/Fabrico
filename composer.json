{
    "name": "minond/fabrico",
    "description": "Small PHP framework",
    "minimum-stability": "dev",

    "require": {
        "php": ">=5.4.0",
        "twig/twig": "1.*",
        "symfony/yaml": "2.*",
        "symfony/console": "2.*",
        "components/normalize.css": "2.*",
        "components/modernizr": "2.*",
        "minond/utilitatis": "1.*",
        "minond/model": "1.*",
        "minond/http": "1.*",
        "minond/event": "1.*",
        "minond/configurare": "1.*",
        "minond/cache": "1.*"

    },

    "autoload": {
        "psr-0": {
            "Fabrico": "src/"
        },
        "files": [
            "scripts/env.php"
        ]
    },

    "bin": [
        "bin/console"
    ],

    "suggest": {
        "minond/nice_error": "for better error output",
        "minond/profiler": "for basic profiling needs"
    },

    "config": {
        "bin-dir": "bin",
        "component-dir": "public/vendor/"
    }
}
