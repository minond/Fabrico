{
    "name": "minond/fabrico",
    "description": "PHP framework",
    "minimum-stability": "dev",

    "require": {
        "php": ">=5.4.0",
        "twig/twig": "1.*",
        "symfony/yaml": "2.*",
        "symfony/console": "2.*",
        "minond/utilitatis": "1.*",
        "minond/model": "1.*",
        "minond/http": "1.*",
        "minond/event": "1.*",
        "minond/configurare": "1.*",
        "minond/cache": "1.*"

    },

    "require-dev": {
        "satooshi/php-coveralls": "dev-master"
    },

    "autoload": {
        "psr-0": {
            "Fabrico": "src/"
        },
        "files": [
            "scripts/env.php"
        ]
    },

    "bin": [
        "bin/console"
    ],

    "suggest": {
        "minond/nice_error": "for better error output",
        "minond/profiler": "for basic profiling needs"
    },

    "config": {
        "bin-dir": "bin"
    }
}
